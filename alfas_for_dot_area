select t.id_trace, 
(
 select alfa from alfa_compare where id_alfa_compare = 
 (
 select id_alfa_compare from alfa_compare where id_trace =  t.id_trace order by id_alfa_compare limit 1
 ) + 1642
) as b,

(select alfa from alfa_compare where id_alfa_compare = 
 (
 select id_alfa_compare from alfa_compare where id_trace =  t.id_trace order by id_alfa_compare limit 1
 ) + 1643
) as b2
from trace t
where t.id_fiber = 3
order by t.id_trace;
